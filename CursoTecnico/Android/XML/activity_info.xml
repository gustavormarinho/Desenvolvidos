<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a3ainfo.tcc.infoActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="229dp"
        app:srcCompat="@drawable/powerfox"
        android:layout_weight="0.14" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PowerFox Corporation"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua solução em nossas mãos."
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: powerfoxcorporation@gmail.com"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço: Rua dos Prazeres, 13 - Vila Leopoldina"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEP: 05270-100"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone: (11)3911-0760"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/layoutzika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version 1.0"
            />

    </LinearLayout>



</LinearLayout>
